@model IEnumerable<comp2007_lab4.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create","Student")" class="btn btn-success"><i class="fa fa-plus fa-lg"></i> Add Student</a>
</p>
<table class="table table-striped table-hover table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstMidName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstMidName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnrollmentDate)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Student", new { id = item.StudentID })" class="btn btn-primary"><i class="fa fa-edit fa-lg"></i> Edit</a>
            <a href="@Url.Action("Details", "Student", new { id = item.StudentID })" class="btn btn-default"><i class="fa fa-eye fa-lg"></i> Details</a>
            <a href="@Url.Action("Delete", "Student", new { id = item.StudentID })" class="btn btn-danger"><i class="fa fa-trash fa-lg"></i> Delete</a>
        </td>
    </tr>
}

</table>
